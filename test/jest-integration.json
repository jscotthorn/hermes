{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testEnvironment": "node",
  "testRegex": "test/integration/.*(spec|test)\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "src/**/*.(t|j)s",
    "!src/main.ts"
  ],
  "coverageDirectory": "../coverage/integration",
  "testTimeout": 60000,
  "maxWorkers": 1,
  "verbose": true,
  "bail": false,
  "setupFilesAfterEnv": ["<rootDir>/test/setup-integration.ts"]
}